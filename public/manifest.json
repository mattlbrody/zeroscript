{
  "manifest_version": 3,
  "name": "Zeroscript - Real-time Sales Coaching",
  "version": "1.0.0",
  "description": "AI-powered real-time sales coaching tool with live transcription and insights",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Zeroscript - Click to open"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.freedomcreditrepair.com/*",
        "https://www.identityiq.com/*",
        "https://www.smartcredit.com/*",
        "https://www.creditheroscore.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}